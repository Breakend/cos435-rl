% Sleek Dark Beamer Theme for RL Lecture Notes
% Bold sans-serif with warm sepia/beige accents on black

\mode<presentation>

% ============================================================
% Font setup - Bold sans-serif
% ============================================================
\usepackage[T1]{fontenc}
\usepackage{helvet}  % Helvetica-based sans-serif
\renewcommand{\familydefault}{\sfdefault}

% Make everything bolder
\usefonttheme{professionalfonts}
\setbeamerfont{title}{size=\LARGE, series=\bfseries}
\setbeamerfont{subtitle}{size=\large, series=\mdseries}
\setbeamerfont{frametitle}{size=\Large, series=\bfseries}
\setbeamerfont{framesubtitle}{size=\normalsize, series=\mdseries}
\setbeamerfont{author}{size=\normalsize, series=\bfseries}
\setbeamerfont{institute}{size=\small}
\setbeamerfont{date}{size=\small}
\setbeamerfont{footline}{size=\tiny}
\setbeamerfont{block title}{series=\bfseries}
\setbeamerfont{item}{series=\bfseries}

% ============================================================
% Color definitions - Black background with warm sepia accents
% ============================================================
\definecolor{darkbg}{RGB}{0, 0, 0}               % Pure black background
\definecolor{darkgray}{RGB}{25, 25, 25}          % Slightly lighter for blocks
\definecolor{accentsepia}{RGB}{210, 180, 140}    % Warm sepia/tan
\definecolor{accentbeige}{RGB}{245, 222, 179}    % Light beige
\definecolor{accentbrown}{RGB}{139, 90, 43}      % Darker brown
\definecolor{accentgold}{RGB}{218, 165, 32}      % Gold accent
\definecolor{accentcream}{RGB}{255, 253, 208}    % Cream white
\definecolor{textwhite}{RGB}{255, 255, 255}      % Pure white text
\definecolor{textgray}{RGB}{180, 180, 180}       % Gray for secondary text
\definecolor{successgreen}{RGB}{144, 238, 144}   % Light green for success
\definecolor{alertred}{RGB}{205, 92, 92}         % Indian red for alerts

% ============================================================
% Set colors
% ============================================================
\setbeamercolor{normal text}{fg=textwhite, bg=darkbg}
\setbeamercolor{alerted text}{fg=accentgold}
\setbeamercolor{example text}{fg=successgreen}

\setbeamercolor{structure}{fg=accentsepia}

\setbeamercolor{background canvas}{bg=darkbg}
\setbeamercolor{background}{bg=darkbg}

\setbeamercolor{palette primary}{fg=textwhite, bg=darkbg}
\setbeamercolor{palette secondary}{fg=textwhite, bg=darkgray}
\setbeamercolor{palette tertiary}{fg=textwhite, bg=darkbg}
\setbeamercolor{palette quaternary}{fg=textwhite, bg=darkbg}

% Frame title
\setbeamercolor{frametitle}{fg=textwhite, bg=darkbg}
\setbeamercolor{framesubtitle}{fg=accentsepia}

% Title page
\setbeamercolor{title}{fg=textwhite}
\setbeamercolor{subtitle}{fg=accentsepia}
\setbeamercolor{author}{fg=accentbeige}
\setbeamercolor{institute}{fg=textgray}
\setbeamercolor{date}{fg=textgray}

% Blocks
\setbeamercolor{block title}{fg=darkbg, bg=accentsepia}
\setbeamercolor{block body}{fg=textwhite, bg=darkgray}
\setbeamercolor{block title alerted}{fg=textwhite, bg=alertred}
\setbeamercolor{block body alerted}{fg=textwhite, bg=darkgray}
\setbeamercolor{block title example}{fg=darkbg, bg=successgreen}
\setbeamercolor{block body example}{fg=textwhite, bg=darkgray}

% Items
\setbeamercolor{itemize item}{fg=accentsepia}
\setbeamercolor{itemize subitem}{fg=accentbeige}
\setbeamercolor{itemize subsubitem}{fg=textgray}
\setbeamercolor{enumerate item}{fg=accentsepia}
\setbeamercolor{enumerate subitem}{fg=accentbeige}

% Footer and navigation
\setbeamercolor{footline}{fg=textgray, bg=darkbg}
\setbeamercolor{navigation symbols}{fg=textgray}

% ============================================================
% Inner theme settings
% ============================================================
\useinnertheme{rectangles}

% Itemize bullets - square style matching the aesthetic
\setbeamertemplate{itemize item}{\textcolor{accentsepia}{\rule{1.5ex}{1.5ex}}}
\setbeamertemplate{itemize subitem}{\textcolor{accentbeige}{\rule{1.2ex}{1.2ex}}}
\setbeamertemplate{itemize subsubitem}{\textcolor{textgray}{\rule{1ex}{1ex}}}

% Enumerate style
\setbeamertemplate{enumerate item}{\textcolor{accentsepia}{\bfseries\insertenumlabel.}}
\setbeamertemplate{enumerate subitem}{\textcolor{accentbeige}{\bfseries\insertsubenumlabel.}}

% ============================================================
% Outer theme settings
% ============================================================

% Remove navigation symbols
\setbeamertemplate{navigation symbols}{}

% Frame title with underline accent
\setbeamertemplate{frametitle}{%
    \vspace{0.6em}
    \insertframetitle
    \ifx\insertframesubtitle\empty\else
        \par\vspace{0.2em}
        {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle}
    \fi
    \vspace{0.4em}
    \textcolor{accentsepia}{\rule{\textwidth}{1pt}}
    \vspace{0.5em}
}

% Footer with slide number
\setbeamertemplate{footline}{%
    \hfill%
    \usebeamercolor[fg]{footline}%
    \usebeamerfont{footline}%
    \textcolor{accentsepia}{\insertframenumber{}} / \inserttotalframenumber%
    \hspace{1em}%
    \vspace{0.5em}%
}

% Title page - bold and centered
\setbeamertemplate{title page}{%
    \vfill
    \begin{center}
        {\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par}
        \vspace{0.5em}
        \textcolor{accentsepia}{\rule{0.6\textwidth}{2pt}}
        \vspace{0.5em}
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}
        \vspace{2em}
        {\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor\par}
        \vspace{0.5em}
        {\usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute\par}
        \vspace{0.5em}
        {\usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate\par}
    \end{center}
    \vfill
}

% Section page - bold with sepia accents
\AtBeginSection[]{%
    \begin{frame}[plain]
        \vfill
        \centering
        \textcolor{accentsepia}{\Large\bfseries\insertsectionhead}
        \vspace{0.5em}
        \textcolor{accentsepia}{\rule{0.4\textwidth}{2pt}}
        \vfill
    \end{frame}
}

\mode<all>
